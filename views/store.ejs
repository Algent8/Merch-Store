<%- include("partials/header") -%>




  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-5 g-3 item">
<!-- Set row-cols-md-6 for fulscreen view -->
<!-- U can play with the numbers to get the right fit for rull screen -->

<%Merchandise.forEach(function(item){%>


    <div class="col">
      <div class="card shadow-sm ">
        <!-- <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"/><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg> -->
        <img class="img" src="images/<%=item.image%>" alt="">
        <div class="card-body">
          <p class="card-text"> <%= item.name %></p>
          <div class="d-flex justify-content-between align-items-center">
              <form class="" action="/" method="post">
            <div class="btn-group">
              <button type="submit"  name="itemId" value="<%= item._id %>" class="btn btn-sm btn-outline-secondary">View</button>
             </div>
               </form>
               <form class="" action="/add" method="post">
                 <div class="btn-group">

                    <button type="submit" name="itemId" value="<%= item._id %>" class="btn btn-sm btn-outline-secondary">Add to Cart</button>
                  </div>
               </form>

            <small class="text-muted"> $<%= item.price %></small>
          </div>
        </div>
      </div>
      </div>


<%})%>



      </div>



<%- include("partials/footer") -%>
